<UserControl x:Class="VirtualZooManagementFA3.FeedAnimals"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualZooManagementFA3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox x:Name="animalListBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="572" Height="302"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,373,0,0">
            <Button Content="Feed Animal" Click="FeedAnimal_Click" Margin="5"/>
            <Button Content="Give Water" Click="GiveWater_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
